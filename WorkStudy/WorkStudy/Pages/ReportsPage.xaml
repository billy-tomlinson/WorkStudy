<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:workStudy="clr-namespace:WorkStudy.ViewModels" xmlns:views="clr-namespace:WorkStudy.Views" x:Class="WorkStudy.Pages.ReportsPage">
    <ContentPage.BindingContext>
        <workStudy:ReportsPageViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <AbsoluteLayout HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="Transparent" Padding="30">
            <views:PageNotAllowedView IsVisible="{Binding IsPageUnavailableVisible}" />
            <StackLayout BackgroundColor="Transparent" HorizontalOptions="Center" Padding="10" Margin="10" IsVisible="{Binding IsPageVisible}">
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Label Text="Analysis Reports" FontSize="30" TextColor="Black" HorizontalOptions="Center" />
                </StackLayout>
                <StackLayout>
                    <Button Text="Send Report" Command="{Binding SendEmail}" IsEnabled="{Binding IsEnabled}" />
                </StackLayout>
                <StackLayout>
                    <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" Color="White" />
                </StackLayout>
            </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>