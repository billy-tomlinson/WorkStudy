<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:workStudy="clr-namespace:WorkStudy.ViewModels" xmlns:local="clr-namespace:WorkStudy.Custom" x:Class="WorkStudy.MainPage" BackgroundColor="Transparent" x:Name="MainPage1">
    <ContentPage.BindingContext>
        <workStudy:MainPageViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="Transparent">
            <StackLayout BackgroundColor="Transparent">
                <StackLayout Orientation="Horizontal" Padding="2,2,2,2">
                    <Label Text="Study Number : " FontSize="20" TextColor="Black" HorizontalOptions="Start" />
                    <Label Text="{Binding StudyNumber}" FontSize="20" TextColor="Black" />
                </StackLayout>
                <local:CustomListView x:Name="List" Margin="0,10" ItemsSource="{Binding Operators}" BackgroundColor="Gray" HasUnevenRows="True" ItemClickedCommand="{Binding ItemClickedCommand}" HorizontalOptions="Center" HeightRequest="450">
                    <x:Arguments>
                        <ListViewCachingStrategy>RecycleElement</ListViewCachingStrategy>
                    </x:Arguments>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Padding="20">
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="{Binding Name}" FontSize="25" TextColor="Azure" />
                                        <Label Text="{Binding Observed}" FontSize="10" TextColor="Azure" />
                                    </StackLayout>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </local:CustomListView>
                <StackLayout>
                    <Button Text="Save Observations" WidthRequest="200" FontSize="10" BackgroundColor="#E8AD00" TextColor="Black" Command="{Binding SaveObservations}" />
                </StackLayout>
                <StackLayout>
                    <Button Text="Pause Study" WidthRequest="200" FontSize="10" BackgroundColor="#E8AD00" TextColor="Black" Command="{Binding PauseStudy}" />
                </StackLayout>
                <StackLayout>
                    <Button Text="Finish Study" WidthRequest="200" FontSize="10" BackgroundColor="Red" TextColor="White" Command="{Binding EndStudy}" />
                </StackLayout>
                <StackLayout>
                    <Button Text="Edit Activities" WidthRequest="200" FontSize="10" BackgroundColor="Red" TextColor="White" Command="{Binding EditStudy}" />
                </StackLayout>
            </StackLayout>
            <ContentView x:Name="ratingView" BackgroundColor="#C0808080" Padding="10, 0" IsVisible="{Binding RatingsVisible}" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All">
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="10" Margin="10">
                    <StackLayout Orientation="Vertical" HeightRequest="170" WidthRequest="300" BackgroundColor="White">
                        <Grid x:Name="controlGrid" RowSpacing="1" ColumnSpacing="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <local:CustomButton x:Name="myButton1" Text="80" Rating="80" Grid.Row="0" Grid.Column="0" Style="{StaticResource plainButton}" Command="{Binding RatingSelected}" CommandParameter="{x:Reference myButton1}" />
                            <local:CustomButton x:Name="myButton2" Text="90" Rating="90" Grid.Row="0" Grid.Column="1" Style="{StaticResource plainButton}" Command="{Binding RatingSelected}" CommandParameter="{x:Reference myButton2}" />
                            <local:CustomButton x:Name="myButton3" Text="100" Rating="100" Grid.Row="0" Grid.Column="2" Style="{StaticResource plainButton}" Command="{Binding RatingSelected}" CommandParameter="{x:Reference myButton3}" />
                            <local:CustomButton x:Name="myButton4" Text="110" Rating="110" Grid.Row="0" Grid.Column="3" Style="{StaticResource plainButton}" Command="{Binding RatingSelected}" CommandParameter="{x:Reference myButton4}" />
                            <local:CustomButton x:Name="myButton5" Text="40" Rating="40" Grid.Row="1" Grid.Column="0" Style="{StaticResource plainButton}" Command="{Binding RatingSelected}" CommandParameter="{x:Reference myButton5}" />
                            <local:CustomButton x:Name="myButton6" Text="50" Rating="50" Grid.Row="1" Grid.Column="1" Style="{StaticResource plainButton}" Command="{Binding RatingSelected}" CommandParameter="{x:Reference myButton6}" />
                            <local:CustomButton x:Name="myButton7" Text="60" Rating="60" Grid.Row="1" Grid.Column="2" Style="{StaticResource plainButton}" Command="{Binding RatingSelected}" CommandParameter="{x:Reference myButton7}" />
                            <local:CustomButton x:Name="myButton8" Text="70" Rating="70" Grid.Row="1" Grid.Column="3" Style="{StaticResource plainButton}" Command="{Binding RatingSelected}" CommandParameter="{x:Reference myButton8}" />
                            <local:CustomButton x:Name="myButton9" Text="0" Rating="0" Grid.Row="2" Grid.Column="0" Style="{StaticResource plainButton}" Command="{Binding RatingSelected}" CommandParameter="{x:Reference myButton9}" />
                            <local:CustomButton x:Name="myButton10" Text="10" Rating="10" Grid.Row="2" Grid.Column="1" Style="{StaticResource plainButton}" Command="{Binding RatingSelected}" CommandParameter="{x:Reference myButton10}" />
                            <local:CustomButton x:Name="myButton11" Text="20" Rating="20" Grid.Row="2" Grid.Column="2" Style="{StaticResource plainButton}" Command="{Binding RatingSelected}" CommandParameter="{x:Reference myButton11}" />
                            <local:CustomButton x:Name="myButton12" Text="30" Rating="30" Grid.Row="2" Grid.Column="3" Style="{StaticResource plainButton}" Command="{Binding RatingSelected}" CommandParameter="{x:Reference myButton12}" />
                        </Grid>
                    </StackLayout>
                </StackLayout>
            </ContentView>
            <ContentView x:Name="activityView" BackgroundColor="#C0808080" IsVisible="{Binding ActivitiesVisible}" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All">
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <StackLayout Orientation="Vertical" WidthRequest="360" BackgroundColor="#eee" Margin="7" Padding="7">
                        <Label Text="{Binding OperatorName}" IsVisible="{Binding Isvisible}" />
                        <Label Text="Activities" IsVisible="{Binding Isvisible}" />
                        <StackLayout IsVisible="{Binding Isvisible}" Orientation="Horizontal" Margin="0,0,10,0" BackgroundColor="Transparent">
                            <local:RepeaterView ItemsSource="{Binding GroupActivities}">
                                <local:RepeaterView.ItemTemplate>
                                    <DataTemplate>
                                        <ViewCell>
                                            <Grid Padding="3" Margin="3" BackgroundColor="Transparent">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <BoxView Grid.Row="0" Grid.Column="0" IsVisible="{Binding ActivityOne.IsEnabled}" />
                                                <local:CustomLabel Style="{StaticResource activityLabel}" IsVisible="{Binding ActivityOne.IsEnabled}" Text="{Binding ActivityOne.Name}" BackgroundColor="{Binding ActivityOne.Colour}" FontSize="15" Grid.Row="0" Grid.Column="0">
                                                    <local:CustomLabel.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding Path = BindingContext.ActivitySelected, Source={x:Reference MainPage1}}" CommandParameter="{Binding ActivityOne.Id}" />
                                                    </local:CustomLabel.GestureRecognizers>
                                                </local:CustomLabel>
                                                <BoxView Grid.Row="0" Grid.Column="1" IsVisible="{Binding ActivityTwo.IsEnabled}" />
                                                <local:CustomLabel Style="{StaticResource activityLabel}" IsVisible="{Binding ActivityTwo.IsEnabled}" Text="{Binding ActivityTwo.Name}" FontSize="15" Grid.Row="0" Grid.Column="1" BackgroundColor="{Binding ActivityTwo.Colour}">
                                                    <local:CustomLabel.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding Path = BindingContext.ActivitySelected, Source={x:Reference MainPage1}}" CommandParameter="{Binding ActivityTwo.Id}" />
                                                    </local:CustomLabel.GestureRecognizers>
                                                </local:CustomLabel>
                                                <BoxView Grid.Row="0" Grid.Column="2" IsVisible="{Binding ActivityThree.IsEnabled}" />
                                                <local:CustomLabel Style="{StaticResource activityLabel}" IsVisible="{Binding ActivityThree.IsEnabled}" Text="{Binding ActivityThree.Name}" FontSize="15" Grid.Row="0" Grid.Column="2" BackgroundColor="{Binding ActivityThree.Colour}">
                                                    <local:CustomLabel.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding Path = BindingContext.ActivitySelected, Source={x:Reference MainPage1}}" CommandParameter="{Binding ActivityThree.Id}" />
                                                    </local:CustomLabel.GestureRecognizers>
                                                </local:CustomLabel>
                                            </Grid>
                                        </ViewCell>
                                    </DataTemplate>
                                </local:RepeaterView.ItemTemplate>
                            </local:RepeaterView>
                        </StackLayout>
                    </StackLayout>
                </StackLayout>
            </ContentView>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>