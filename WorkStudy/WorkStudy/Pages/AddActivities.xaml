<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="WorkStudy.AddActivities">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="plainButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#E8AD00" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="FontSize" Value="20" />
            </Style>
            <Style x:Key="plainLabel" TargetType="Label">
                <Setter Property="BackgroundColor" Value="#eee" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="FontSize" Value="20" />
            </Style>
            <Style x:Key="plainEntry" TargetType="Entry">
                <Setter Property="BackgroundColor" Value="#eee" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="FontSize" Value="20" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout Padding="10" Margin="10" BackgroundColor="Transparent">
            <StackLayout Orientation="Horizontal">
                <Label Text="List Of Activities" Style="{StaticResource plainLabel}" HorizontalOptions="Center" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Acitivity 1" Style="{StaticResource plainLabel}" />
                <Entry WidthRequest="200" Style="{StaticResource plainEntry}" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Acitivity 2" Style="{StaticResource plainLabel}"/>
                <Entry WidthRequest="200" Style="{StaticResource plainEntry}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Acitivity 3" Style="{StaticResource plainLabel}" />
                <Entry WidthRequest="200" Style="{StaticResource plainEntry}" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Acitivity 4" Style="{StaticResource plainLabel}" />
                <Entry WidthRequest="200" Style="{StaticResource plainEntry}" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Acitivity 5" Style="{StaticResource plainLabel}" />
                <Entry WidthRequest="200" Style="{StaticResource plainEntry}" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Acitivity 6" Style="{StaticResource plainLabel}" />
                <Entry WidthRequest="200" Style="{StaticResource plainEntry}" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Acitivity 7" Style="{StaticResource plainLabel}" />
                <Entry WidthRequest="200" Style="{StaticResource plainEntry}" />
            </StackLayout>
            <Button Text="Submit Activities" Style="{StaticResource plainButton}" WidthRequest="200" Clicked="Submit_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>