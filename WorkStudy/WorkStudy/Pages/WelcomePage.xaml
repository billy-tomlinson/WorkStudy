<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkStudy.Pages.WelcomePage">
    <StackLayout Padding="10" Spacing="10" CompressedLayout.IsHeadless="true" 
                 VerticalOptions="Center"  BackgroundColor="Transparent">
        <Label Text="Welcome to Tye Management Services!" VerticalOptions="Center"
               HorizontalOptions="Center" XAlign="Center" FontSize="20"/>
        <Image x:Name="timeStudy" HeightRequest="400" WidthRequest="400"></Image>
        <Label Text="Work Study for the Professionals"
               VerticalOptions="Center" HorizontalOptions="Center"
               XAlign="Center" FontSize="20" />
        <ActivityIndicator x:Name="activityInd" IsVisible="true"
                           IsRunning="true" />
    </StackLayout>
</ContentPage>