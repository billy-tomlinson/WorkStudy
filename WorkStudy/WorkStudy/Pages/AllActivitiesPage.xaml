<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:views="clr-namespace:WorkStudy.Views" 
             xmlns:viewModels="clr-namespace:WorkStudy.ViewModels;assembly=WorkStudy" 
             x:Name="AllActivitiesView" 
             xmlns:local="clr-namespace:WorkStudy.Custom" 
             x:Class="WorkStudy.Pages.AllActivitiesPage">
    <ContentPage.BindingContext>
        <viewModels:AllActivitiesViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <AbsoluteLayout HorizontalOptions="Center" 
                        VerticalOptions="Center" 
                        BackgroundColor="Transparent" 
                        HeightRequest="700"
                        WidthRequest="420">
            <StackLayout BackgroundColor="Transparent" 
                         WidthRequest="320"
                         AbsoluteLayout.LayoutBounds="0, 0, 1, 1" 
                         AbsoluteLayout.LayoutFlags="All">
                <local:CustomListView 
                    ItemsSource="{Binding ItemsCollection}"
                    BackgroundColor="Gray" 
                    HasUnevenRows="True" 
                    HorizontalOptions="Center" 
                    SeparatorVisibility="Default" 
                    SeparatorColor="#605F5F" HeightRequest="500"
                    Margin="0,10">
                    <x:Arguments>
                        <ListViewCachingStrategy>RecycleElement</ListViewCachingStrategy>
                    </x:Arguments>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackLayout VerticalOptions="CenterAndExpand">
                                        <Label Text="{Binding Name}" 
                                               HorizontalTextAlignment="Start" 
                                               TextColor="White" 
                                               Margin="5,5,5,5"/>
                                    </StackLayout>
                                    <Switch IsToggled="{Binding Selected}" Grid.Column="1" Margin="5,5,5,5"/>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </local:CustomListView>
                <StackLayout>
                    <Button Text="Submit Details" WidthRequest="150" Command="{Binding Submit}" CommandParameter="{x:Reference AllActivitiesView}" />
                </StackLayout>
            </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>