<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="WorkStudy.Pages.ValidationView">
    <ContentView.Content>
         <ContentView BackgroundColor="Transparent" Padding="10, 0">
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="10" 
                             Margin="10" WidthRequest="250" HeightRequest="130" BackgroundColor="#d0e6e4">
                    <StackLayout Orientation="Vertical" HeightRequest="50" HorizontalOptions="Center" WidthRequest="200" >
                        <Label Text="{Binding ValidationText}"  HorizontalTextAlignment="Center"/>
                    </StackLayout>
                    <StackLayout Orientation="Vertical" BackgroundColor="Transparent" WidthRequest="150">
                        <Button Text="OK" Style="{StaticResource plainButton}" Command="{Binding CloseView}" 
                                Margin="60,10,60,10"  />
                    </StackLayout>
                </StackLayout>
            </ContentView>
    </ContentView.Content>
</ContentView>
