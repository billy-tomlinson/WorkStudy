<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:viewModels1="clr-namespace:WorkStudy.ViewModels" xmlns:local="clr-namespace:WorkStudy.Custom" xmlns:views="clr-namespace:WorkStudy.Pages" x:Class="WorkStudy.AddOperators">
    <ContentPage.BindingContext>
        <viewModels1:AddOperatorsViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <AbsoluteLayout HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="Transparent">
            <StackLayout>
                <StackLayout Orientation="Horizontal" Margin="7,5,5,5" HeightRequest="60" VerticalOptions="Center">
                    <Entry Style="{StaticResource inputEntry}" Placeholder="Operator Name" Text="{Binding Name}" HeightRequest="50" />
                    <Button Style="{StaticResource plusButton}" Command="{Binding SaveOperator}" />
                </StackLayout>
                <views:RepeaterControlView />
            </StackLayout>
            <views:ActivitiesView IsVisible="{Binding ActivitiesVisible}" />
            <StackLayout HorizontalOptions="Center" VerticalOptions="Center" AbsoluteLayout.LayoutBounds="0.25, 0.25, 1, 1" AbsoluteLayout.LayoutFlags="All">
                <views:ValidationView x:Name="validationView" IsVisible="{Binding IsInvalid}" />
            </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>