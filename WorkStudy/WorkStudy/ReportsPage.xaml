<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="WorkStudy.ReportsPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="plainButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#E8AD00" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="FontSize" Value="20" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout BackgroundColor="Transparent" HorizontalOptions="Center" Padding="10" Margin="10">
            <StackLayout Orientation="Horizontal" >
                <Label Text="Analysis Reports" FontSize="30" TextColor="Black" HorizontalOptions="Center" />
            </StackLayout>
            <Button Text="Top Level Stats" Style="{StaticResource plainButton}" Clicked="Submit_Clicked" />
            <Button Text="Individual Stats" Style="{StaticResource plainButton}" Clicked="Submit_Clicked" />
            <Button Text="BreakDown Report" Style="{StaticResource plainButton}" Clicked="Submit_Clicked" />
            <Button Text="Tailored Report" Style="{StaticResource plainButton}" Clicked="Submit_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>