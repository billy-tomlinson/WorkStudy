<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:workStudy="clr-namespace:WorkStudy;assembly=WorkStudy"
             x:Class="WorkStudy.MainPage"  
             Title ="Expendable ListView "  
             BackgroundColor="Bisque">
    <ContentPage.BindingContext>
        <workStudy:MainListView/>
    </ContentPage.BindingContext>
<StackLayout>
    <ListView Margin="0,80"  
              ItemTapped="ListViewItem_Tabbed"  
              ItemsSource="{Binding Products}"  
              HasUnevenRows="True"  
              BackgroundColor="Black">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Padding="20">
                        <Label Text="{Binding Title}"  
                               FontSize="25"  
                               TextColor="Azure"/>
                        <StackLayout IsVisible="{Binding Isvisible}">
                                <Label Text="Activities"  
                                   FontSize="25"  
                                   TextColor="Azure"/>
                        </StackLayout>
                        <StackLayout IsVisible="{Binding Isvisible}"  
                                     Orientation="Horizontal"  
                                     Margin="0,0,80,0">
                            <Button Text="Working"  
                                    WidthRequest="110"  
                                    FontSize="15"  
                                    BackgroundColor="Chocolate"  
                                    TextColor="White"/>
                            <Button Text="Not Working"  
                                    WidthRequest="110"  
                                    FontSize="15"  
                                    BackgroundColor="CornflowerBlue"  
                                    TextColor="DarkBlue"/>
                            <Button Text="Absent"  
                                    WidthRequest="110"  
                                    FontSize="15"  
                                    BackgroundColor="LightCoral"  
                                    TextColor="Maroon"/>
                        </StackLayout >
                        <StackLayout IsVisible="{Binding Isvisible}">
                            <Label Text="Rating"  
                                   FontSize="25"  
                                   TextColor="Azure"/>
                        </StackLayout>
                            <StackLayout IsVisible="{Binding Isvisible}"  
                                     Orientation="Horizontal"  
                                     Padding="0,0,0,0," Margin="0,0,0,0">
                            <Button Text="10"  
                                    WidthRequest="30"  
                                    FontSize="8"  
                                    BackgroundColor="WhiteSmoke"  
                                    TextColor="Black"/>
                            <Button Text="20"  
                                    WidthRequest="30"  
                                    FontSize="8"  
                                    BackgroundColor="WhiteSmoke"  
                                    TextColor="Black"/>
                            <Button Text="30"  
                                    WidthRequest="30"  
                                    FontSize="8"  
                                    BackgroundColor="WhiteSmoke"  
                                    TextColor="Black"/>
                            <Button Text="40"  
                                    WidthRequest="30"  
                                    FontSize="8"  
                                    BackgroundColor="WhiteSmoke"  
                                    TextColor="Black"/>
                            <Button Text="50"  
                                    WidthRequest="30"  
                                    FontSize="8"  
                                    BackgroundColor="WhiteSmoke"  
                                    TextColor="Black"/>
                            <Button Text="60"  
                                    WidthRequest="30"  
                                    FontSize="8"  
                                    BackgroundColor="WhiteSmoke"  
                                    TextColor="Black"/>
                            <Button Text="70"  
                                    WidthRequest="30"  
                                    FontSize="8"  
                                    BackgroundColor="WhiteSmoke"  
                                    TextColor="Black"/>
                            <Button Text="80"  
                                    WidthRequest="30"  
                                    FontSize="8"  
                                    BackgroundColor="WhiteSmoke"  
                                    TextColor="Black"/>
                            <Button Text="90"  
                                    WidthRequest="30"  
                                    FontSize="8"  
                                    BackgroundColor="WhiteSmoke"  
                                    TextColor="Black"/>
                            <Button Text="100"
                                    WidthRequest="30"  
                                    FontSize="8"  
                                    BackgroundColor="WhiteSmoke"  
                                    TextColor="Black"/>
                        </StackLayout>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    <Button Text="Submit Study"  
            WidthRequest="110"  
            FontSize="10"  
            BackgroundColor="WhiteSmoke"  
            TextColor="Black"/>
    </StackLayout>
</ContentPage>  